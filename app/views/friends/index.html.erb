<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Twitter</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>
  <tbody>

    <% @friends.each do |friend| %>
      <%# 
      <%= render friend % > 
      %>
        <tr id="<%= dom_id friend %>">
          <th scope="row"><%= friend.id %></th>
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= link_to "Show", friend, class:"align-middle" %></td>
          <td><%= link_to "Edit", edit_friend_path(friend), class:"align-middle" %></td>
          <%# <td><%= button_to "Delete", friend, method: :delete, class:"btn btn-link p-0" % ></td> %>
          <td><%= link_to "Delete", friend_path(friend), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></td>
        </tr>

    <% end %>

  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
